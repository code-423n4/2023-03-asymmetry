{
  "name": "@asymmetryfinance/smart-contracts",
  "version": "1.0.0",
  "description": "Participate in curve wars through staked ETH derivatives and CVX",
  "private": false,
  "scripts": {
    "compile": "yarn hardhat compile",
    "console": "yarn hardhat console",
    "coverage": "yarn hardhat coverage",
    "deploy": "yarn hardhat run scripts/deploy.ts",
    "lint": "yarn lint:ts && yarn lint:solidity && yarn lint:prettier",
    "lint:ts": "yarn eslint '**/*.{js,ts}'",
    "lint:solidity": "yarn solhint **/*.sol",
    "lint:prettier": "prettier --list-different 'contracts/**/*.sol'",
    "lint:fix": "yarn solhint **/*.sol --fix && yarn eslint '**/*.{js,ts}' --fix",
    "prettier": "prettier '**/*.{json,sol,md}' --write",
    "clean": "rm -rf node_modules artifacts cache typechain-types deployments",
    "test": "yarn hardhat test",
    "local-node": "dotenv cross-var yarn hardhat node --fork %MAINNET_URL%",
    "local-init": "yarn hardhat run --network localhost scripts/local-init.ts",
    "local-mine": "yarn hardhat run --network localhost scripts/mine-to-next-cycle.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asymmetryfinance/smart-contracts.git"
  },
  "author": "Asymmetry Finance",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asymmetryfinance/issues"
  },
  "homepage": "https://github.com/asymmetryfinance#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chai": "^4.3.4",
    "cross-var": "^1.1.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.5.2",
    "hardhat": "^2.9.1",
    "hardhat-contract-sizer": "^2.3.0",
    "hardhat-deploy": "^0.9.22",
    "hardhat-ethernal": "^3.1.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.19",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@balancer-labs/balancer-js": "^2.0.0",
    "@chainlink/contracts": "^0.5.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.1",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "axios": "^0.27.2"
  }
}
